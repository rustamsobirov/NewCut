<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    android:padding="10dp"
    android:background="@drawable/bg_appointment_item_rv"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_booked_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12 September 2021, 08:00"
        android:textSize="17sp"
        android:textColor="#191632"
        android:textStyle="bold"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        
        
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile"
            android:layout_width="104dp"
            android:layout_height="90dp"
            app:shapeAppearanceOverlay="@style/rounded_corner"
            android:src="@drawable/image_barber"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bella Rinova"
                android:textColor="#191632"
                android:textSize="14sp"
                android:maxLines="1"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tv_user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6391 Elgin St. Celina, Dela..."
                android:maxLines="1"
                android:textColor="#ABAAB1"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_type_haircut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services: Regular haircut, Classic shaving"
                android:textSize="13sp"
                android:textColor="#432BDF"
                android:layout_marginTop="6dp"
                android:maxLines="2"/>




        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:thumb="@drawable/switch_thumb"
            app:track="@drawable/switch_track" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:entries="@array/times"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/tv_bg"
                android:textColor="#191632"
                android:textSize="13sp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textStyle="normal"
                android:text="Cancel"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>