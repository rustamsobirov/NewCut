<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewCut" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_900</item>
        <item name="colorPrimaryVariant">@color/dark_600</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_700</item>
        <item name="colorSecondaryVariant">@color/dark_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorButtonNormal">@color/colorPrimary_500</item>
        <item name="android:hint">@color/text_500</item>
        <item name="buttonStyle">@style/ButtonPrimary</item>
        <item name="android:textColor">@color/blackWhite</item>
        <item name="editTextStyle">@style/PrimaryEditText</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="CustomDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>