<resources>
    <!-- Base application theme. -->
    <style name="Theme.NewCut" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary_700</item>
        <item name="colorPrimaryVariant">@color/colorPrimary_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary_500</item>
        <item name="colorSecondaryVariant">@color/colorPrimary_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/ButtonPrimary</item>
        <item name="android:textColor">@color/colorPrimary_300</item>
        <item name="android:textSize">16sp</item>
        <item name="editTextStyle">@style/PrimaryEditText</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:listDivider">@android:color/transparent</item>
    </style>

    <!--        full screen-->
    <style name="homeTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="CustomDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="PrimaryEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingTop">16dp</item>
        <item name="android:background">@drawable/list_item</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/editTextColor</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_bgn</item>
    </style>

    <style name="MediumTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BoldTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/radius_top</item>
    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="rounded_corner">
        <item name="cornerSize">30%</item>
    </style>

    <declare-styleable name="SpannedGridLayoutManager">
        <attr name="android:orientation" />
        <attr name="spanCount" />
        <attr name="aspectRatio" format="string" />
    </declare-styleable>

</resources>