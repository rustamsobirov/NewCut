<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewCut" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary_700</item>
        <item name="colorPrimaryVariant">@color/colorPrimary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary_700</item>
        <item name="colorSecondaryVariant">@color/colorPrimary_700</item>
        <item name="colorOnSecondary">@color/colorPrimary_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/ButtonPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="editTextStyle">@style/PrimaryEditText</item>
    </style>


    <style name="CustomDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="PrimaryEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingTop">16dp</item>
        <item name="android:background">@drawable/list_item</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/editTextColor</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_bgn</item>
    </style>

    <style name="MediumTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BoldTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/radius_top</item>
    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="rounded_corner">
        <item name="cornerSize">25%</item>
    </style>

    <style name="rounded_corner_style">
        <item name="cornerSize">24dp</item>
    </style>

    <declare-styleable name="SpannedGridLayoutManager">
        <attr name="android:orientation" />
        <attr name="spanCount" />
        <attr name="aspectRatio" format="string" />
    </declare-styleable>

    <style name="verifyEditStyle">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:autofillHints" tools:targetApi="o">password</item>
        <item name="android:background">@drawable/edtextbackground</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/colorPrimary_500</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="fragmentAnimations">
        <item name="enterAnim">@anim/nav_default_enter_anim</item>
        <item name="exitAnim">@anim/nav_default_exit_anim</item>
        <item name="popEnterAnim">@anim/nav_default_pop_enter_anim</item>
        <item name="popExitAnim">@anim/nav_default_pop_exit_anim</item>
    </style>

</resources>