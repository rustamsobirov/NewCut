<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewCut" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary_700</item>
        <item name="colorPrimaryVariant">@color/colorPrimary_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary_500</item>
        <item name="colorSecondaryVariant">@color/colorPrimary_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/ButtonPrimary</item>
        <item name="android:textColor">@color/colorPrimary_300</item>
        <item name="android:hint">@color/text_500</item>
        <item name="editTextStyle">@style/PrimaryEditText</item>
    </style>

    <style name="CustomDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="PrimaryEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingTop">16dp</item>
        <item name="android:background">@drawable/list_item</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/editTextColor</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_bgn</item>
    </style>

    <style name="MediumTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BoldTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/radius_top</item>
    </style>


    <style name="circle">
    <item name="cornerSize">50%</item>
</style>
</resources>